model Place {
    id          String      @id @default(uuid())
    place       String 
    way         String
    content     String
    url         Asset[]
    comment     Comment[]
    point       Int         @default(1)
    latitude    String
    longtitude  String
    createdAt   DateTime    @default(now())
}

model Asset {
    id      String  @id @default(uuid())
    place   Place   @relation(fields: [placeId], references: [id])
    placeId String
}

model Comment {
    id      String  @id @default(uuid())
    place   Place   @relation(fields: [placeId], references: [id])
    placeId String
}